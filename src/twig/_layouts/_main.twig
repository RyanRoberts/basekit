{% spaceless %}
<!doctype html>
<html lang="en-gb" class="no-js">
  <head prefix="og:http://ogp.me/ns# article:http://ogp.me/ns/article#">
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {# The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags #}
    <script>document.documentElement.className=document.documentElement.className.replace("no-js","js")</script>
    <!--[if lt IE 9]><script src="/js/html5shiv.min.js"></script><![endif]-->
    <title>{{ siteName }} â€” {{ title }}</title>

    <link rel="stylesheet" href="/assets/css/basekit.css">

    {% include "includes/global/_icons.twig" %}
    {% include "includes/global/_seo-social.twig" %}
  </head>

  <body id="start">
    <a class="skip-link" href="#content">Skip to content</a>
    <a class="skip-link" href="#nav-primary">Skip to navigation</a>

    <div class="position-over bg-white--tint">
      <header id="site-header" class="site-container">
        <div data-bk-layout="to:md:p:0 md:p:r md:p:sm middle">

          <div data-bk-layout="3" class="site-logo--container">
            <h1 class="site-logo logo">
              <a class="site-logo__img logo__img" href="{{ siteUrl }}">
                {{ siteName }}
              </a>
            </h1>
          </div>

          {% include "includes/global/_nav.twig" %}

        </div>
      </header>
    </div>

    {% block content %}
    {% endblock %}

    {% include "includes/global/_footer.twig" %}

    {# Not the latest version, because compatibility #}
    <script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
    {# Remove if not needed, remember to check you're not loading plugins unused plugins too #}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    {# This is compiled by Gulp #}
    <script src="/assets/js/basekit.min.js"></script>

    {% block jsBody %}
    {% endblock %}

  </body>
</html>
{% endspaceless %}
