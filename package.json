{
  "name": "Basekit",
  "version": "2.1.1",
  "description": "Basekit Gulp Workflow",
  "main": "gulpfile.js",
  "homepage": "http://basekit.fortytwo.studio",
  "author": "Ryan Roberts",
  "copyright": "Ryan Roberts",
  "license": "UNLICENSED",
  "scripts": {
    "watch:sass": "sass --style=compressed --watch --no-source-map src/sass/basekit.scss public/assets/css/basekit.css",
    "sass": "sass --style=compressed --no-source-map src/sass/basekit.scss public/assets/css/basekit.css",
    "postcss": "postcss --config postcss.config.js public/assets/css/basekit.css --output public/assets/css/basekit.css",
    "build": "npm run sass && npm run postcss"
  },
  "paths": {
    "src": {
      "base": "./src/",
      "sass": "./src/sass/",
      "js": "./src/js/",
      "css": "./src/css/"
    },
    "dist": {
      "base": "./public/",
      "css": "./public/assets/css/",
      "js": "./public/assets/js/",
      "fonts": "./public/assets/fonts/",
      "img": "./public/assets/imgs/"
    }
  },
  "vars": {
    "scssName": "basekit.scss",
    "cssName": "basekit.css",
    "jsName": "basekit.min.js"
  },
  "devDependencies": {
    "gulp": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-load-plugins": "^1.5.0",
    "gulp-sass": "^4.0.1",
    "gulp-size": "^3.0.0",
    "gulp-uglify": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fortytwostudio/basekit.git"
  },
  "bugs": {
    "url": "https://github.com/fortytwostudio/basekit/issues"
  },
  "dependencies": {}
}
