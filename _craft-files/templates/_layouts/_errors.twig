{% set bgColour = '#fff' %}
{% set textColour = '#432465' %}
{% set linkColour = '#d01508' %}
{% set errorTextColour = '#d01508' %}

{% spaceless %}
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>{{ title }}</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/imgs/web-icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/imgs/web-icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/imgs/web-icons/favicon-16x16.png">
    <link rel="manifest" href="/assets/imgs/web-icons/site.webmanifest">
    <link rel="mask-icon" href="/assets/imgs/web-icons/safari-pinned-tab.svg?v=2" color="#cd1719">
    <meta name="application-name" content="TECA">
    <meta name="msapplication-TileColor" content="#cd1719">
    <meta name="theme-color" content="#cd1719">

    <style>
      body {
        font: 100%/1.4 -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', 'Helvetica', 'Roboto', 'Ubuntu', 'Fira Sans', 'Droid Sans', 'arial', sans-serif;;
        color: {{ textColour }};
        text-align: center;
        width: 85%;
        padding: 5% 0;
        max-width: 33.75em;
        margin: 0 auto;
        background-color: {{ bgColour }};
      }
      h1 {
        font-size: 300%;
        line-height: 1;
        color: {{ errorTextColour }};
        display: inline-block;
      }
      h1:after {
        content: 'â€”';
        display: block;
        font-size: 75%;
        margin-top: 0.75em;
        text-align: center;
        width: 100%;
      }
      p {
        padding: 0 2%;
        margin: 0 0 1em;
        letter-spacing: 0.05em;
      }
      a {
        color: {{ linkColour }};
        text-decoration: none;
      }
      a:hover b,
      a:focus b {
        text-decoration: underline;
        text-decoration-skip: ink;
      }
      .main-content {
        margin-bottom: 12%;
      }
    </style>

    <link href="/imgs/web-icons/favicon-32x32.png" rel="shortcut icon">
  </head>

  <body>
    <div class="main-content">
      {% block content %}{% endblock %}
    </div>
  </body>
</html>
{% endspaceless %}
