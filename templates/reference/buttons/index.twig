{% extends "_layout.twig" %}

{% set title = "Buttons" %}
{% set slug = "buttons" %}
{% set pageHeaderColor = "bg-primary--dark" %}

{% block content %}

<div class="bg-tertiary--light">
  <div id="buttons" tabindex="-1" class="site-container  pad">
    <h2 data-bk-layout class="font-l  pad-s-b">{{ title }} on light background</h2>

    <p data-bk-layout>
      <a class="btn" href="#">Primary Button</a>
    </p>

    <p data-bk-layout>
      <a class="btn  btn--secondary" href="#">Secondary Button</a>
    </p>

    <div class="pad-s-t">
      <p data-bk-layout="4">
        <a class="btn  btn--fill" href="#">Fit Container</a>
      </p>

      <p data-bk-layout="4 center">
        <a class="btn  btn--fill" href="#">Centre Text</a>
      </p>

      <p data-bk-layout="4 right">
        <a class="btn  btn--fill" href="#">Right Text</a>
      </p>
    </div>


    <div class="pad-s-t">
      <p data-bk-layout="auto" class="font-xs">
        <a class="btn" href="#">Extra Small</a>
      </p>

      <p data-bk-layout="auto" class="font-s">
        <a class="btn" href="#">Small</a>
      </p>

      <p data-bk-layout="auto">
        <a class="btn" href="#">Default</a>
      </p>

      <p data-bk-layout="auto" class="font-m">
        <a class="btn" href="#">Medium</a>
      </p>

      <p data-bk-layout="auto" class="font-l">
        <a class="btn" href="#">Large</a>
      </p>

      <p data-bk-layout="auto" class="font-xl">
        <a class="btn" href="#">Extra Large</a>
      </p>
    </div>


    <div class="pad-s-t">
      <p data-bk-links="download" data-bk-layout="auto">
        <a class="btn  btn--secondary" href="file.jpg" download>Download button</a>
      </p>

      <p data-bk-links="up" data-bk-layout="auto">
        <a class="btn  btn--secondary" href="#start">Back to top</a>
      </p>

      <p data-bk-links="down" data-bk-layout="auto">
        <a class="btn  btn--secondary" href="#footer">Down to footer</a>
      </p>

      <p data-bk-links="more" data-bk-layout="auto">
        <a class="btn  btn--secondary" href="/demo/">Read more</a>
      </p>

      <p data-bk-links="exit" data-bk-layout="auto">
        <a class="btn  btn--secondary" href="https://github.com/fortytwostudio/basekit" target="_blank" rel="noopener">External link</a>      </p>
    </div>
  </div>
</div>

