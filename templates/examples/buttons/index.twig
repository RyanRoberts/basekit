      <p data-bk-layout="auto">
        <a class="btn" href="#">Default</a>
      </p>

      <p data-bk-layout="auto" class="font-m">
        <a class="btn" href="#">Medium</a>
      </p>

      <p data-bk-layout="auto" class="font-l">
        <a class="btn" href="#">Large</a>
      </p>

      <p data-bk-layout="auto" class="font-xl">
        <a class="btn" href="#">Extra Large</a>
      </p>
    </div>
  </div>

